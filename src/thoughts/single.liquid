---
pagination:
  data: thoughts
  alias: thought
  size: 1
  addAllPagesToCollections: true
permalink: "/thoughts/{{ thought.date | date: '%s' }}-{{ thought.post | markdownplain | truncatewords: 6, '' | slugify }}/"
eleventyComputed:
  title: "{{ thought.post | markdownplain | truncatewords: 4 }}"
  summary: "{{ thought.post | markdownplain | truncatewords: 40 }}"
---
{% layout 'base.liquid' %}

{% block main %}
<div class="heading">
  <h1>
    <a href="/thoughts">Thoughts</a>
  </h1>
</div>

<a href="{{ page.url }}" class="thoughts-link">
  <time datetime="{{ thought.date | date: '%Y-%m-%dT%H:%M:%S%z' }}" id="{{ id }}">
    {{- thought.date | date: '%b %-d, %Y %-l:%M%P' -}}
  </time>
</a>
{{ thought.post | markdownblock }}
{% endblock %}
